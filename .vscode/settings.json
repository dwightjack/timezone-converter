{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "css.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "files.associations": {
    "*.ejs": "html",
    "*.tmpl": "html"
  },
  "emmet.includeLanguages": {
    "ejs": "html"
  }
}
