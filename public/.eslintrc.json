{
  "root": true,
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "globals": { "YUI": true },
  "rules": {
    "no-shadow": "warn",
    "block-scoped-var": "error",
    "consistent-return": "error",
    "eqeqeq": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js"],
      "env": { "jest": true }
    }
  ]
}
